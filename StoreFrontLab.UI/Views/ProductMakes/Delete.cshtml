@model StoreFrontLab.DATA.EF.ProductMake

@{
    ViewBag.Title = "Delete Make";
}

<div class="container">
    <h2 class="viewHeader">@ViewBag.Title</h2>

    <h3>Are you sure you want to delete make '@Model.MakeName'?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.MakeName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MakeName)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                @Html.ActionLink("Back to List", "Index")
            </div>
        }
    </div>
</div>
