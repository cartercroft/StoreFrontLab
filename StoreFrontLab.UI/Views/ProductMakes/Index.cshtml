@model IEnumerable<StoreFrontLab.DATA.EF.ProductMake>

@{
    ViewBag.Title = "Product Makes Index";
}

<div class="container">
    <div class="row">
        <div class="col-md-10">
            <h2 class="text-center viewHeader">@ViewBag.Title</h2>

            <p>
                @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.MakeName)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.MakeName)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.MakeID }) |
                            @Html.ActionLink("Details", "Details", new { id = item.MakeID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.MakeID })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
