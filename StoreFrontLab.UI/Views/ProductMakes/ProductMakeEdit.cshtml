@model StoreFrontLab.DATA.EF.ProductMake

@using (Html.BeginForm("AjaxEdit", "ProductMakes", FormMethod.Post, new { id= "ProductMakeEditForm"}))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MakeID)

        <div class="form-group">
            @Html.LabelFor(model => model.MakeName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MakeName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MakeName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @*<input type="submit" value="Save" class="btn btn-default" />*@
                <input type="button" id="saveUpdate" value="Update Make" class="btn btn-info" />
            </div>
        </div>
    </div>
}