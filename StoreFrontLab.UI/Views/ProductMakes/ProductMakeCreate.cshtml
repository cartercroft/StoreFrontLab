@model StoreFrontLab.DATA.EF.ProductMake

@using (Html.BeginForm("", "", FormMethod.Post, new { id = "ProductMakeCreateForm" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Create New Make</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.MakeName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MakeName, new { htmlAttributes = new { @class = "form-control", placeholder = "Make" } })
                @Html.ValidationMessageFor(model => model.MakeName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
