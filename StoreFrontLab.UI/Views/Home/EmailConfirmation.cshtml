@model StoreFrontLab.UI.Models.ContactViewModel

@{
    ViewBag.Title = "Email Confirmation";
}

<div class="container">
    <div class="row">
        <div class="col-md-12 email emailSuccess text-center">
            <h2>@ViewBag.Title</h2>

            <h4>We received the following message:</h4>
            <p>@Model.Message</p>
            <h4>We will respond as soon as possible to @Model.Email. Thank you for contacting us.</h4>
        </div>
    </div>
</div>
