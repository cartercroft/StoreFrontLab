@model IEnumerable<List<StoreFrontLab.DATA.EF.Product>>

@{
    StoreFrontLab.DATA.EF.StoreFrontEntities db = new StoreFrontLab.DATA.EF.StoreFrontEntities();
    var query = db.Products.Where(x => x.IsFeatured);
    List<StoreFrontLab.DATA.EF.Product> featured = query.ToList();
}

<div class="smoke">
    <div class="container" id="fh5co-pricing">

        <div class="heading animate-box"><h2><b>FEATURED PRODUCTS</b></h2></div>
        <div class="text-center animate-box"><h3>Lorem ipsum lahore</h3></div>
        <br><br>
        @* Start foreach, iterating through featured products *@
        @if (featured == null)
        {
            <div class="container">
                <p class="text-center alert alert-warning">
                    No featured products available at this time.
                </p>
            </div>
        }
        else
        {
            <div class="row">
                @foreach (var item in featured)
                {
                    if (item.IsFeatured)
                    {
                        <div class="text-center col-md-4 animate-box" data-animate-effect="fadeInLeft">
                            <div class="price-box">
                                <img src="~/Content/images/@item.ProductImage" alt="@item.ProductName" style="max-height: 10rem; max-width: 12rem;" />
                                <h3>@item.ProductName</h3>
                                <p>@item.Price</p>
                                <p></p>
                            </div>
                        </div>
                    }
                }
            </div>
        }
