    <div class="signup">

    </div>


    <div class="dark">
        <div class="container animate-box" id="fh5co-footer">
            <div class="row">
                <div class="col-sm-4">
                    <div><a class="nsavbar-brand text-prpl" href="#">GUITAR <span class="navbar-brand2 text-red">GALAXY</span></a></div>
                    <br>
                    <div class="text-white">
                        Get amazing results working with the best programmers, designers, writers and
                        other top online pros. You can hire us with confidence. Get amazing results working with the best
                        programmers
                    </div>
                </div>
                <div class="offset-4 col-sm-4">
                    <div class="icons">Explore Our Pages</div>
                    <br>
                    <table width="100%">
                        <tr>
                            <td><a class="text-white" href="@Url.Action("Index", "Home")">Home</a></td>
                            <td><a class="text-white" href="@Url.Action("Index","Products")">Shop</a></td>
                        </tr>
                        <tr>
                            <td><a class="text-white" href="#!">Services</a></td>
                            <td><a class="text-white" href="#!">Cart</a></td>
                        </tr>
                        <tr>
                            <td><a class="text-white" href="@Url.Action("Contact", "Home")">Contact</a></td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="darker">
        <div class="container" id="fh5co-legal">
            <div class="row">
                <div class="col-sm-8 text-white mtext-center">
                    &copy; @DateTime.Now.Year <a class="text-prpl" href="#">GUITAR <span class="navbar-brand2 text-red">GALAXY</span></a>
                </div>
            </div>
        </div>
    </div>
    @if (Request.IsAuthenticated && User.IsInRole("Admin"))
    {
        <!-- Admin Button -->
        <div id="admin-btn" class="button" onclick="openAdminNav()">
            <span class="vertical-text">ADMIN</span>
        </div>

        <!-- Admin Navigation -->
        <div id="admin-nav" class="sidenav">
            <a href="javascript:void(0)" class="close-btn" onclick="closeAdminNav()"> &times;</a>
            <a href="@Url.Action("Index", "RolesAdmin")">Manage Roles</a>
            <a href="@Url.Action("Index", "UsersAdmin")">Manage Users</a>
        </div>
    }


