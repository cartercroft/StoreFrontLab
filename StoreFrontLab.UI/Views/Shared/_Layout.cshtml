<body>

    <div class="row top-bar">
        <div class="col-sm-7"></div>
        <div class="col-sm-4 col-6 login">
            @*<a href="@Url.Action("Login", "Account")" class="text-white">Login</a> &nbsp; &nbsp;
                <a href="@Url.Action("Register", "Account")" class="text-white">Sign Up</a>*@
            @Html.Partial("_LoginPartial")
        </div>
    </div>

    <nav class="navbar navbar-expand-lg nav-bar navbar-light bg-gry">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index","Home")">GUITAR <span class="navbar-brand2"> GALAXY</span></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto navi">
                    <li class="nav-item">
                        <a class="nav-link nav-btn" href="@Url.Action("Index", "Home")">HOME</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-btn" href="@Url.Action("Index", "Products")">PRODUCTS</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-btn" href="@Url.Action("Contact", "Home")">CONTACT</a>
                    </li>
                    @if (Request.IsAuthenticated && User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link nav-btn" href="/ShoppingCart/Index">
                                <i class="fa fa-shopping-cart"></i>&nbsp; CART
                            </a>
                        </li>
                    }

                </ul>
            </div>
        </div>
    </nav>

    @RenderBody()

